<% extend PairwisePlugin::Helpers::ViewerHelper %>
<% extend PairwisePlugin::Helpers::SuggestionsHelper %>

<%= pairwise_plugin_stylesheet  %>

<h1><%= _("Pairwise Question") %></h1>
<h4><%= _("Question text" ) %>: </h4><span><%= @pairwise_content.name %></span>
<div class="result_label">
	<%= pairwise_result_link _("Results"), @pairwise_content %>
</div>
<% if flash[:error] %>
	<div class="error">
	   <%= flash[:error] %>
	</div>
<% end %>
<% if  flash[:notice] %>
	<div class="notice">
	   <%= flash[:notice] %>
	</div>
<% end %>
<div class="choices_filter">
  <h4><%= _("Filter" ) %></h4>

  <% form_for(:filter, {:action => :index, :controller => 'pairwise_plugin_suggestions', :profile => profile.identifier}) do %>
    <%= labelled_form_field(_('Text') + ":", text_field_tag('filter[data]', params[:filter] ? params[:filter][:data]:'')) %>
    <span class="filter_pending">
      <%= label_tag  _('Show') + ":" %>
      <%= radio_button_tag :pending, 0, params[:pending]!='1' %> <%= _('Ideas') %>
      <%= radio_button_tag :pending, 1, params[:pending]=='1' %> <%= _('Suggestions') %>
    </span>
    <%= submit_button :search, _('Search') %>
  <% end %>

