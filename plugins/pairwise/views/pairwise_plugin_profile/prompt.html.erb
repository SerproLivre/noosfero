<% extend PairwisePlugin::Helpers::ViewerHelper %>

<h1><%= link_to @question.name, @pairwise_content.view_url %></h1>

<p class='right'><%=  pairwise_result_link _('Results'), @pairwise_content %> | 
	<%= pairwise_edit_link _('Edit Question'), @pairwise_content if @pairwise_content.allow_edit?(user)%></p>

<p><%= @pairwise_content.body %></p>
	<div class="prompt"><%= choose_left_link(@pairwise_content, @question, @prompt) %></div>
	<div class="prompt-separator"> <%= _('Or') %></div>
	<div class="prompt"><%= choose_right_link(@pairwise_content, @question, @prompt) %></div>
